{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      // N.B. For this configuration to work, the contextual menu must be in a state were the arg is a valid selection!!
      "name": "launcher with menu selection arg",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/launcher",
      "env": {
        "debug": true,
        //"vsc_debugger_arg": "Install & open Magento app in browser",
        "vsc_debugger_arg": "Restart Magento app",
        "mdm_script_path": "${workspaceFolder}/bin/mdm",
        "parent_pids_path": "${env:HOME}/Adobe Systems Incorporated/SITeam - docker/env-library-rc/ref-2.3.4.app/Contents/MacOS/ref-2-3-4-mlrv"
      },
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "launcher with no selection arg",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/launcher",
      "env": {
        "debug": true,
        "vsc_debugger_arg": "n/a",
        "mdm_script_path": "${workspaceFolder}/bin/mdm",
        "parent_pids_path": "${env:HOME}/Adobe Systems Incorporated/SITeam - docker/env-library-rc/ref-2.3.4.app/Contents/MacOS/ref-2-3-4-mlrv"
      },
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample ref cloud env with complete media cache",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": ["-p", "xzclipcwvhkao", "-e", "master", "-n", "ref", "-m", "-i", "${env:HOME}/.mdm/current/icons/ref.icns"]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample demo cloud env with complete media cache",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": ["-p", "34gqyvr5hijbu", "-e", "master", "-n", "demo", "-m", "-i", "${env:HOME}/.mdm/current/icons/demo.icns"]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample b2b cloud env with complete media cache",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": ["-p", "q72xoca5xcysq", "-e", "master", "-n", "b2b", "-m", "-i", "${env:HOME}/.mdm/current/icons/b2b.icns"]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (simplest configuration)",
      "program": "${file}"
    }
  ]
}