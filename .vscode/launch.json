{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (simplest configuration)",
      "program": "${file}"
    },
    {
      "type": "bashdb",
      "request": "launch",
      // N.B. For this configuration to work, the contextual menu for a specific app must be in a state 
      // where the arg is a valid selection!!
      "name": "launcher with menu selection arg",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/launcher",
      "env": {
        "debug": true,
        //"vsc_debugger_arg": "Optimize Docker for better performance",
        //"vsc_debugger_arg": "Install & open Magento app in browser",
        //"vsc_debugger_arg": "Restart Magento app",
        //"vsc_debugger_arg": "Start MDM shell",
        "vsc_debugger_arg": "Reload reverse proxy",
        "TRAVIS_BUILD_DIR": "${workspaceFolder}",
        "parent_pids_path": 
          "${env:HOME}/Adobe Systems Incorporated/SITeam - docker/env-library-rc/ref-2.3.4.app/Contents/MacOS/blah"
      },
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      // N.B. For this configuration to work, the contextual menu for a specific app must be in a state 
      // where the arg is a valid selection!!
      "name": "launcher with direct handler call",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/launcher",
      "env": {
        "debug": true,
        "vsc_debugger_arg": "toggle_advanced_mode",
        "TRAVIS_BUILD_DIR": "${workspaceFolder}",
        "parent_pids_path": 
          "${env:HOME}/Adobe Systems Incorporated/SITeam - docker/env-library-rc/ref-2.3.4.app/Contents/MacOS/blah"
      },
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "launcher with no selection arg",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/launcher",
      "env": {
        "debug": true,
       // "vsc_debugger_arg": "n/a",
        "TRAVIS_BUILD_DIR": "${workspaceFolder}",
        "parent_pids_path": 
        //"${env:HOME}/Adobe Systems Incorporated/SITeam - docker/env-library-rc/ref-2.3.4.app/Contents/MacOS/blah"
        "${env:HOME}/Downloads/ref-2.3.5-p1.app/Contents/Resources/script"
      },
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize standalone MDM",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-s"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize product's magento-cloud master git branch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-g", "git@github.com:magento/magento-cloud.git",
        "-b", "master",
        "-n", "mc",
        "-a", "${env:HOME}/.composer/auth.json",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize from current ref git branch (manually update branch in this conf)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-g", "git@github.com:pmet-public/magento-cloud.git",
        "-b", "pmet-2.3.5-ref",
        "-n", "ref",
        "-a", "${env:HOME}/.composer/auth.json",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize from current demo git branch (manually update branch in this conf)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-g", "git@github.com:pmet-public/magento-cloud.git",
        "-b", "pmet-2.3.5-demo",
        "-n", "demo",
        "-a", "${env:HOME}/.composer/auth.json",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize from current b2b git branch (manually update branch in this conf)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-g", "git@github.com:pmet-public/magento-cloud.git",
        "-b", "pmet-2.3.5-b2b",
        "-n", "b2b",
        "-a", "${env:HOME}/.composer/auth.json",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample ref cloud env",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "xzclipcwvhkao",
        "-e", "master",
        "-n", "ref",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample ref cloud env with complete media cache (SLOW)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "xzclipcwvhkao",
        "-e", "master",
        "-n", "ref",
        "-i", "${env:HOME}/.mdm/current/icons/ref.icns",
        "-m"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample demo cloud env",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "34gqyvr5hijbu",
        "-e", "master",
        "-n", "demo",
        "-i", "${env:HOME}/.mdm/current/icons/demo.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample demo cloud env with complete media cache (SLOW)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "34gqyvr5hijbu",
        "-e", "master",
        "-n", "demo",
        "-i", "${env:HOME}/.mdm/current/icons/demo.icns",
        "-m",
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample b2b cloud env",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "q72xoca5xcysq",
        "-e", "master",
        "-n", "b2b",
        "-i", "${env:HOME}/.mdm/current/icons/b2b.icns"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Dockerize a sample b2b cloud env with complete media cache (SLOW)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/dockerize",
      "env": {
        "debug": true,
      },
      "args": [
        "-p", "q72xoca5xcysq",
        "-e", "master",
        "-n", "b2b",
        "-i", "${env:HOME}/.mdm/current/icons/b2b.icns",
        "-m"
      ]
    }
  ]
}