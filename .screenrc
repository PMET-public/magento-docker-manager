defscrollback 5000 # huge scrollback buffer
startup_message off # no welcome message

termcapinfo xterm* ti@:te@

attrcolor b ".I" # allow bold/256 colors - necessary for some reason
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' # tell screen how to set colors. AB = background, AF=foreground
defbce on # use current bg color for erased chars

# mouse tracking allows to switch region focus by clicking
mousetrack on

# default windows
# assumes $PWD is Resources dir of app
screen -t 'Handler log' 1 sh -c "cat ~/.mdm/current/handler.log; tail -n 0 -f ~/.mdm/current/handler.log;"
screen -t 'Menu log'  2 sh -c "cat ~/.mdm/current/menu.log; tail -n 0 -f ~/.mdm/current/menu.log;"
select 1
# bind c screen 1 # window numbering starts at 1 not 0
# bind 0 select 10

# # get rid of silly xoff stuff
# bind s split

bindkey -k k5 prev #F5 Previous Window
bindkey -k k6 next #F6 Next Window

hardstatus alwayslastline
hardstatus string '- F5/F6 toggle windows - %{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'